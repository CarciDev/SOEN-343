model User {
  id           Int                   @id @default(autoincrement())
  email        String                @unique
  name         String
  comment      String?
  role         UserRole              @default(CUSTOMER)
  passwordHash String
  disabled     Boolean               @default(false)
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  shipments    ShipmentTransaction[]
}

enum UserRole {
  ADMIN
  CUSTOMER
}
